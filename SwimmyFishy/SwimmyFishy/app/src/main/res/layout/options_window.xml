<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/options_window"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <SeekBar
        android:id="@+id/BGMSeekbar"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_below="@+id/bgmVolume"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:theme="@style/Theme.AppCompat" />

    <TextView
        android:id="@+id/bgmVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/BGMSeekbar"
        android:layout_marginTop="85dp"
        android:fontFamily="casual"
        android:text="Background music volume"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/sfxVolume"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/BGMSeekbar"
        android:layout_below="@+id/BGMSeekbar"
        android:layout_marginTop="29dp"
        android:fontFamily="casual"
        android:text="Sound FX volume"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/volume"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/bgmVolume"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="35dp"
        android:fontFamily="casual"
        android:text="VOLUME"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:typeface="normal" />

    <SeekBar
        android:id="@+id/soundFXSeekbar"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/BGMSeekbar"
        android:layout_below="@+id/sfxVolume"
        android:layout_marginTop="29dp"
        android:theme="@style/Theme.AppCompat" />

    <Button
        android:id="@+id/backToMenu"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/sfxVolume"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/button_back_to_menu"
        android:fontFamily="casual"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>
